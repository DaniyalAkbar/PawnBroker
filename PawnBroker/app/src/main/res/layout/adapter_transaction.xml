<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtTransactionID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:textColor="@android:color/black"
        android:text="1"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtTransactionAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTransactionID"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="10000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtTransactionType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTransactionAmount"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:textColor="@android:color/black"
        android:layout_marginStart="5dp"
        android:text="CREDIT"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtTransactionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTransactionType"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:textColor="@android:color/black"
        android:text="01-12-2012"
        android:textSize="16dp" />


    <Button
        android:id="@+id/btn_Transaction"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/button_round1"
        android:text="Delete" />



</RelativeLayout>