<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_dark">
    <TextView
        android:text="Update an Announcement"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:id="@+id/txttitle"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/txtAnnouncement"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/txttitle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:width="200dp"
        android:background="#f5f5f5" />

    <EditText
        android:id="@+id/txtAnnouncementID"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/txttitle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:width="200dp"
        android:background="#f5f5f5" />

    <EditText
        android:id="@+id/txtDateAnnouncement"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/txttitle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:width="200dp"
        android:background="#f5f5f5" />

    <EditText
        android:id="@+id/txtTypeAnnouncement"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/txttitle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="257dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:width="200dp"
        android:background="#f5f5f5" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="166dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="149dp"
        android:text="Announcement:"
        android:textColor="@android:color/black"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="86dp"
        android:text="Announcement ID:"
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="129dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="228dp"
        android:text="Date:"
        android:textColor="@android:color/black"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="166dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="311dp"
        android:text="Type:"
        android:textColor="@android:color/black"
        android:textSize="25dp" />

    <Button
        android:id="@+id/txtAnnouncementSubmitBtn"
        android:layout_width="282dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="61dp"
        android:layout_marginLeft="61dp"
        android:layout_marginBottom="170dp"
        android:background="@drawable/button_round1"
        android:text="Update Announcement"
        android:textAllCaps="false"
        android:textSize="25dp" />

</RelativeLayout>