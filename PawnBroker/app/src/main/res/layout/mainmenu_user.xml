<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="	#C0C0C0">


    <Button
        android:id="@+id/addUserBtn"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"

        android:background="@drawable/button_round1"
        android:text="Add User"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="45dp" />

    <Button
        android:id="@+id/viewUserBtn"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addUserBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_round1"
        android:text="View All Users"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="107dp" />

    <Button
        android:id="@+id/searchUserBtn"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewUserBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_round1"
        android:text="Search User"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="171dp" />

    <Button
        android:id="@+id/deleteUserBtn"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchUserBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_round1"
        android:text="Delete User"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43"
        tools:layout_editor_absoluteX="116dp" />

    <Button
        android:id="@+id/updateUserBtn"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deleteUserBtn"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="21dp"
        android:background="@drawable/button_round1"
        android:text="Update User"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.551"
        tools:layout_editor_absoluteX="116dp" />

    <TextView
        android:id="@+id/textView2"

        android:layout_width="182dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="112dp"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="33dp"
        android:textColor="@android:color/black"
        android:text="Users"
        android:textAlignment="center"
        android:textSize="25dp" />
</RelativeLayout>