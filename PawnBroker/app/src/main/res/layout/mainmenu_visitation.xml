<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/addVisitationBtn"
        android:layout_width="132dp"
        android:layout_height="47dp"
        android:layout_centerHorizontal="true"


        android:layout_marginTop="80dp"
        android:text="Add Visitation"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="45dp" />

    <Button
        android:id="@+id/viewVisitationBtn"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addVisitationBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="View All Visitations"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="107dp" />

    <Button
        android:id="@+id/searchVisitationBtn"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewVisitationBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Search Visitation"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="171dp" />

    <Button
        android:id="@+id/deleteVisitationBtn"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchVisitationBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Delete Visitation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43"
        tools:layout_editor_absoluteX="116dp" />

    <Button
        android:id="@+id/updateVisitationBtn"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deleteVisitationBtn"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Update Visitation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.551"
        tools:layout_editor_absoluteX="116dp" />

    <TextView
        android:id="@+id/textView2"

        android:layout_width="182dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="112dp"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="33dp"
        android:textColor="@android:color/black"
        android:text="Visitations"
        android:textAlignment="center"
        android:textSize="25dp" />
</RelativeLayout>